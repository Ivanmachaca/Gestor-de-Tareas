<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6CACC"
    >
    <!-- SecciÃ³n de bienvenida -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Bienvenido(a):"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" /> <!-- Color del texto negro -->

    <!-- Nombres label -->
    <TextView
        android:id="@+id/nameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Nombres:"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#000000" /> <!-- Color del texto negro -->

    <!-- Correo label -->
    <TextView
        android:id="@+id/emailLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameLabelTextView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Correo:"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#000000" /> <!-- Color del texto negro -->

    <!-- Primera fila de iconos -->
    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailLabelTextView"
        android:layout_marginTop="50dp"
        android:padding="40dp">

        <!-- Agregar icono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add" /> <!-- Reemplazar con tu recurso drawable -->

            <!-- Agregar label -->
            <TextView
                android:id="@+id/addLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Agregar"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Color del texto negro -->

        </LinearLayout>

        <!-- Mis notas icono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/addImageView"
            android:layout_marginStart="249dp">

            <ImageView
                android:id="@+id/notesImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_notes" /> <!-- Reemplazar con tu recurso drawable -->

            <!-- Mis notas label -->
            <TextView
                android:id="@+id/notesLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Mis notas"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Color del texto negro -->

        </LinearLayout>
    </RelativeLayout>

    <!-- Segunda fila de iconos -->
    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRow"
        android:layout_marginTop="50dp"
        android:padding="40dp">

        <!-- Importante icono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/importantImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_important" /> <!-- Reemplazar con tu recurso drawable -->

            <!-- Importante label -->
            <TextView
                android:id="@+id/importantLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Importante"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Color del texto negro -->

        </LinearLayout>

        <!-- Contactos icono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/importantImageView"
            android:layout_marginStart="249dp">

            <ImageView
                android:id="@+id/contactsImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_contacts" /> <!-- Reemplazar con tu recurso drawable -->

            <!-- Contactos label -->
            <TextView
                android:id="@+id/contactsLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contactos"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Color del texto negro -->

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>