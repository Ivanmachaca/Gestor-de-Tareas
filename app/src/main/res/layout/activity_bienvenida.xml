<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6CACC"
    tools:context=".bienvenidaActivity">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Bienvenido(a):"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/nameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Nombres:"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/emailLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameLabelTextView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Correo:"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#000000" />


    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailLabelTextView"
        android:layout_marginTop="33dp"
        android:padding="40dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/agregar" />


            <TextView
                android:id="@+id/addLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Agregar"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/notesImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nota" />

            <TextView
                android:id="@+id/notesLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Mis notas"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="italic" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRow"
        android:layout_marginTop="50dp"
        android:padding="40dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/importantImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/importante" />             <!-- Importante label -->
            <TextView
                android:id="@+id/importantLabelTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Importante"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/importantImageView"
            android:layout_marginStart="240dp">

            <ImageView
                android:id="@+id/contactsImageView"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:src="@drawable/contactos" />


            <TextView
                android:id="@+id/contactsLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contactame"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>