<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDD8D5"
    >
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Imagen -->
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/titulo"
        android:background="@drawable/imagen1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/nombreTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/imagen"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreTitulo"
        android:textStyle="italic"
        android:hint="Ingrese su nombre"
        android:layout_marginTop="10dp"/>

    <!-- Correo -->
    <TextView
        android:id="@+id/correoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/nombreEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/correoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/correoTitulo"
        android:textStyle="italic"
        android:hint="Ingrese su correo"
        android:layout_marginTop="10dp"/>

    <!-- Contraseña -->
    <TextView
        android:id="@+id/contraseñaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/correoEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/contraseñaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contraseñaTitulo"
        android:hint="Ingrese su contraseña"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>

    <!-- Confirmar Contraseña -->
    <TextView
        android:id="@+id/confirmarContraseñaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Contraseña"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/contraseñaEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/confirmarContraseñaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmarContraseñaTitulo"
        android:hint="Confirme su contraseña"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>

    <!-- Botón Registrarse -->
    <Button
        android:id="@+id/botonRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@id/confirmarContraseñaEditText"
        android:layout_marginTop="20dp"/>

    <!-- Tengo una cuenta -->
    <TextView
        android:id="@+id/tengoCuentaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Ya tengo una cuenta?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/botonRegistrarse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>